@using SimpleApp.Ultilities
@model IEnumerable<SimpleApp.Models.PatientVM>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Index";
}
<h1 class="page-header">Patients</h1>
<div class="table-responsive">

    <table class="table table-striped table-hover">
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Date of Birth
            </th>
            <th>
                Sex
            </th>
            <th>
                Insurance
            </th>
            <th>
                California Resident
            </th>
            @*<th>
                Employment Status
            </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Insurance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CaliforniaResident)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.EmploymentStatus)
                </td>*@
                <td>
                    <input type="button" value="Edit" id=itemId class="btn btn-sm btn-success" onclick="location.href = '@Url.Action(Constant.Actions.Edit,  Constant.Controllers.Patients, new {@id = item.Id})';" /> |
                    <input type="button" value="Details" id=itemId class="btn btn-sm btn-info" onclick="location.href = '@Url.Action(Constant.Actions.Details,  Constant.Controllers.Patients, new {@id = item.Id})';" /> |
                    <input type="button" value="Delete" id=itemId class="btn btn-sm btn-danger" onclick="location.href = '@Url.Action(Constant.Actions.Delete,  Constant.Controllers.Patients, new {@id = item.Id})';"/> 
                </td>
            </tr>
        }

    </table>
</div>
