            @Html.DisplayNameFor(model => model.Comments)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>

    </dl>
</div>

<div>
    <h2>Audit Information</h2>
    @foreach (var auditLog in Model.AuditLogs)
    {
        <div class="accordion">
            <p>@auditLog.UserName @auditLog.EventType.ToString().ToLower() this record on @auditLog.EventDateUTC UTC</p>
            <dl class="dl-horizontal">
                @foreach (var detail in auditLog.LogDetails)
                {
                    //if (detail.PropertyName.ToString().Equals("id"))
                    //{
                    //    continue;
                    //}
                    <dt style="width: 170px;">@detail.PropertyName:</dt>

                    <dd>@detail.OriginalValue => @detail.NewValue</dd>
                }
            </dl>
        </div>
    }
</div>

<p>
    @Html.ActionLink(Constant.Actions.Edit, Constant.Actions.Edit, new { id = Model.Id }) |
    @Html.ActionLink("Back to List", Constant.Actions.Index)
</p>


@section scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
    <script>
        $(function() {
            $(".accordion").accordion({
                collapsible: true,
                active: false
            });
        });
    </script>
}