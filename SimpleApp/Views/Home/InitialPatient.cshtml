@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3 class="bg-primary">New Patient</h3>
    <div id="big-form" class="well auth-box">
        
        <form class="form-horizontal">
                <div class="container form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label class="control-label" for="firstname">First Name </label>
                            <input id="firstname" name="firstname" placeholder="First Name" class="form-control input-xs" type="text">
                        </div>

                        <div class="col-md-3">
                            <label class="control-label" for="lastname">Last Name </label>
                            <input id="lastname" name="lastname" placeholder="Last Name" class="form-control input-xs" type="text">
                        </div>

                        <div class="col-md-2">
                            <label class="control-label" for="dob">Date of Birth </label>
                            <input id="dob" name="dob" placeholder="MM/DD/YYYY" class="form-control input-xs" type="text">
                        </div>

                        <div class="col-md-2">
                            <label class="control-label" for="selectbasic">Sex</label>
                            <div class="">
                                <select id="selectbasic" name="selectbasic" class="form-control">
                                    <option value="1">Male</option>
                                    <option value="2">Female</option>
                                    <option value="2">Unknown</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container form-group">
                    <div class="row">
                        <div class="control-group col-md-3">
                            <label class="control-label">
                                Does the patient have insurance?
                            </label>
                            <div class="container">
                                <div class="radio">
                                    <label for="radios-0">
                                        <input name="radios" id="radios-0" value="1" type="radio">
                                        Yes
                                    </label>
                                </div>
                                <div class="radio">
                                    <label for="radios-1">
                                        <input name="radios" id="radios-1" value="2" type="radio">
                                        No
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <label class="control-label" for="insurancename">Insurance Name </label>
                            <input id="insurancename" name="insurancename" placeholder="Insurance Name" class="form-control input-xs" type="text">
                        </div>
                    </div>
                </div>

            <div class="container form-group">
                <div class="row">
                    <div class="control-group col-md-5">
                        <label class="control-label">Is patient a California resident?</label>
                        <div class="container">
                            <label class="radio-inline" for="radios-2">
                                <input name="radios" id="radios-2" value="1" type="radio">
                                Yes
                            </label>
                            <label class="radio-inline" for="radios-3">
                                <input name="radios" id="radios-3" value="2" type="radio">
                                No
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container form-group">
                <div class="row">
                    <div class="control-group  col-md-5">
                        <label class="control-label">Extra features</label>
                        <div class="container">
                            <div class="checkbox">
                                <label for="checkboxes-0">
                                    <input name="checkboxes" id="checkboxes-0" value="1" type="checkbox">
                                    Paper plains
                                </label>
                            </div>
                            <div class="checkbox">
                                <label for="checkboxes-1">
                                    <input name="checkboxes" id="checkboxes-1" value="2" type="checkbox">
                                    Iron man
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container form-group">
                <div class="row">
                    <div class="control-group  col-md-5">
                        <label class=" control-label">Is patient employed?</label>
                        <div class="container">
                            <label class="checkbox-inline" for="checkboxes-2">
                                <input name="checkboxes" id="checkboxes-2" value="1" type="checkbox">
                                Employed
                            </label>
                            <label class="checkbox-inline" for="checkboxes-3">
                                <input name="checkboxes" id="checkboxes-3" value="2" type="checkbox">
                                Student
                            </label>
                            <label class="checkbox-inline" for="checkboxes-4">
                                <input name="checkboxes" id="checkboxes-4" value="3" type="checkbox">
                                Unemployed
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container form-group">
                <div class="row">
                    <div class="control-group col-md-12">
                        <label class="control-label" for="comment">Comment</label>
                        <div class="container">
                            <textarea class="form-control" id="comment" name="comment"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="form-actions col-md-offset-5">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn">Cancel</button>
    </div>
    <div class="clearfix"></div>
</div>